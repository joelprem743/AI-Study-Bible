{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "types": ["node"],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    
    "baseUrl": "./",                       // REQUIRED
    "paths": {
      "@/*": ["src/*"]                     // Now VALID
    },

    "allowImportingTsExtensions": true,
    "noEmit": true
  }
}
